.p-definition__list {
    font-weight: 500;
    margin-top: 40px;
}

.p-definition__title {
    font-size: 1rem;
    color: var(--color-main);
    letter-spacing: 0.08em;
    margin-bottom: 10px;

    @media (--md) {
        font-size: 21px;
    }
}

.p-definition__text {
    line-height: 2.5;
    font-size: 14px;

    @media (--md) {
        font-size: 1rem;
    }

    & ol,
    & ul {
        margin-top: 2em;

        &:first-child {
            margin-bottom: 2em;
        }
    }
}