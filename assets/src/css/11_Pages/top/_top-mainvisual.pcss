.p-topMainvisual {
    width: 100%;
    height: 100vh;
    background-image: url(../images/mv_xs.jpg);
    background-color: var(--color-bg);
    background-size: cover;
    background-position: top center;
    background-repeat: no-repeat;
    position: relative;

    @media (--xl) {
        background-image: url(../images/mv_xl.jpg);
    }

    @media (--lg) {
        background-image: url(../images/mv_lg.jpg);
    }

    @media (--sm) {
        background-image: url(../images/mv_md.jpg);
    }
}

.p-topMainvisual__inner {
    display: flex;
    justify-content: center;
    align-items: center;
    color: $color-white;
    height: 100%;
}

.p-topMainvisual__title {
    text-align: center;
    user-select: none;
}

.p-topMainvisual__title--main {
    font-family: $font-family-affogato;
    font-size: clamp(32px, calc(2rem + ((1vw - 4px) * 4.9689)), 80px);
    @add-mixin lineHeightCrop 1.4;

    @media (--md) {
        line-height: 88px;
        letter-spacing: $tracking-wide;
    }
}

.p-topMainvisual__title--sub {
    font-size: clamp(18px, calc(1.125rem + ((1vw - 4px) * 0.6211)), 24px);
    margin-top: clamp(27px, calc(1.6875rem + ((1vw - 4px) * -1.5528)), 12px);
    text-align: center;
    font-weight: 500;
    letter-spacing: 0.2em;
    @add-mixin lineHeightCrop 1.4;
}

/*----------  newsticker  ----------*/
.p-topMainvisual__underComponent {
    bottom: 0;
    position: absolute;
    right: 0;
}