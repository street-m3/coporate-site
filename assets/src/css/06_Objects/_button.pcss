.c-button {
    background-image: none;
    display: inline-block;
    font-weight: bold;
    letter-spacing: $tracking-wide;
    min-width: 200px;
    position: relative;
    text-align: center;
    user-select: none;
    white-space: nowrap;
    z-index: 0;
}

@media (hover: hover) {
    .c-button:hover {
        opacity: 0.9;
        transition: opacity 0.4s ease 0s;
    }
}