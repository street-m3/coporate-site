.c-picture-panel__inner {
    display: flex;
    flex-wrap: wrap;
    position: relative;
}

.c-picture-panel__details {
    background-color: $color-white;
    position: relative;
}

.c-picture-panel__details--text {
    color: $gray_dove;
    line-height: $leading-relaxed;
    letter-spacing: 0.05em;

    @media (--md) {
        line-height: $leading-x-loose;
    }
}